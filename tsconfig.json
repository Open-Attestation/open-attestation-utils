{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "jsx": "react"
  },
  "include": ["./src/**/*"]
}
